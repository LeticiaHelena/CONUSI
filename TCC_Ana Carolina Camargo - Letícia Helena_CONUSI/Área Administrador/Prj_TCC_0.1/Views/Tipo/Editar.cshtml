@using Prj_TCC_0._1.Models
@model Tipo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@{Html.BeginForm("Salvar", "Tipo");}
@Html.ValidationSummary(true)

<span class ="label label-success">@TempData["SuccessMsg"]</span>
<span class ="label label-danger">@TempData["ErrorMsg"]</span>

@Html.HiddenFor(x => x.IdTipo)

<div class ="form-group">
    @Html.LabelFor(x => x.Descricao) 
    @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control"})
    @Html.ValidationMessageFor(x => x.Descricao)
</div>

<div class ="form-group">
    @Html.LabelFor(x => x.CodPeca) 
    @Html.TextBoxFor(x => x.CodPeca, new { @class = "form-control"})
    @Html.ValidationMessageFor(x => x.CodPeca)
</div>

@Html.ActionLink("Cancelar", "Index", "Peca", new { @type = "button", @class = "btn btn-default"})


<input type="submit" class="btn btn-primary" value="Salvar"/>


@{Html.EndForm();}